---
interface Props {
  backgroundImage: any;
  heading: string;
  subheading: string;
  className?: string;
}

const {
  backgroundImage,
  heading,
  subheading,
  className = "",
}: Props = Astro.props;
---

<section
  class={`call-to-action-section relative min-h-[400px] flex flex-col items-center justify-center ${className}`}
>
  <div class="relative z-10 text-white text-center">
    <h2 class="text-4xl">{heading}</h2>
    <p>{subheading}</p>
  </div>
  <div class="overflow-clip w-full h-full absolute inset-0">
    <div class="absolute inset-0 bg-black opacity-60"></div>
    <img
      src={backgroundImage?.url}
      alt={backgroundImage?.description}
      class="w-full h-full object-cover object-center"
    />
  </div>
</section>
